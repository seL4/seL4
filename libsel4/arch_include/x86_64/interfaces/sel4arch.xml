<api>
    <struct name="seL4_UserContext">
        <member name="rip"/>
        <member name="rsp"/>
        <member name="rflags"/>
        <member name="rax"/>
        <member name="rbx"/>
        <member name="rcx"/>
        <member name="rdx"/>
        <member name="rsi"/>
        <member name="rdi"/>
        <member name="rbp"/>
        <member name="r8"/>
        <member name="r9"/>
        <member name="r10"/>
        <member name="r11"/>
        <member name="r12"/>
        <member name="r13"/>
